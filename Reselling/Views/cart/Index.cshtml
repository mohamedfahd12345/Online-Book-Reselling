@model List<Book>
@{
	var ans=0;
}
@if(Model.Count >0){
	<table class="table">
                <tr>
                        <th>Image</th>
                        <th>title</th>
                        <th>price</th>
                        <th>author</th>
                        <th>pages</th>
                        <th>category</th>
                        <th>Year</th>

                </tr>
                @foreach (var item in Model)
                {
                   
                        <tr>
                                <td><img src="@item.Photo"></img></td>
                                <td>@item.Title</td>
                                <td>@item.Price</td>
                                <td>@item.Author</td>
                                <td>@item.Pages</td>
                                <td>@item.Category</td>
                                <td>@item.Language</td>
                                <td>@item.Year</td>
                                <td><a href="/cart/delete/@item.Id">Delete</a></td>
                        </tr>
                }
                <tr>
                     
                </tr>
                <tr>
                        <td class="text-right" colspan="4">
                                <a class="btn btn-danger" href="/cart/clear">Clear Cart</a>
                                <a class="btn btn-primary" href="/checkout/Index">Checkout</a>
                        </td>
                </tr>
        </table>


}
else{
	        <h3 class="display-4 text-center">Your cart is empty.</h3>

}