@model List<Ordere>
@if(Model.Count >0){
	<table class="table">
                <tr>
                        <th>Adress</th>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>status</th>
                        

                </tr>
                @foreach (var item in Model)
                {
                   
                        <tr>
                                <td>@item.Adress</td>
                                <td>@item.Date</td>
                                <td>@item.CustomerName</td>
                                <td>@item.CustomerEmail</td>
                                <td>@item.Phone</td>
                                <td>@item.Status</td>
                                <td><a href="/myorders/details/@item.Id">Details</a></td>
                        </tr>
                }
               
               
        </table>

}
else{
	<h1>YOU DO NOT HAVE ANY ORDERS</h1>
}