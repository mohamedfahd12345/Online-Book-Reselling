@model Book
<section class="hero-section">
	    <div class="container">
		    <div class="row">
			    <div class="col-12 col-md-7 pt-5 mb-5 align-self-center">
				    <div class="promo pe-md-3 pe-lg-5">
						  <div class="carousel-inner">
								    <div class="carousel-item active">
								       
								        <div class="source row gx-md-3 gy-3 gy-md-0 align-items-center">
									        <div class="col-12 col-md-auto text-center text-md-start">
									            <img class="source-profile" src="@Model.Photo" alt="image" >
									        </div><!--//col-->
					    <h1 class="headline mb-3">
						    @Model.Title 
					    </h1><!--//headline-->
					    <div class="subheadline mb-4">
						  @Model.Descripition
						    
					    </div><!--//subheading-->
					    <div>
							<h3>
								price:@Model.Price
							</h3>
							<h3>
								Language :@Model.Language
							</h3>
							<h3>
								pages: @Model.Pages
							</h3>
							<h3>
								Year:@Model.Year
							</h3>
							<h3>
								Author:@Model.Author
							</h3>
							<h3>
										@if (Model.Status == "sold")
										{
											<a href="/solddetails/index/@Model.Id">book status : @Model.Status</a>
										}
										else
										{
											<h3>book status : @Model.Status </h3>	
										}


							</h3>	
							
						</div>
					    <div class="cta-holder row gx-md-3 gy-3 gy-md-0">
						    <div class="col-12 col-md-auto">
						        <a class="btn btn-primary w-100" href="/mybook/edit/@Model.Id">Edit</a>
						    </div>
						    <div class="col-12 col-md-auto">
						        <a class="btn btn-secondary scrollto w-100" href="/mybook/delete/@Model.Id">Delete</a>
						    </div>
					    </div><!--//cta-holder-->
							  
							  
							
</div>
</div>
</div>
</div>
</section>

